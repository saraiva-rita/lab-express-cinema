<header>
  <h1>Ironhack Cinema</h1>
  <br />
  <p>Click on the movie to check the showtimes!</p>
</header>
<div class='container'>
  <div class='movies-wrapper'>
    {{#each movies}}
      <div class='movie-card'>
        <div class='movie-card__img'>
          <img src='{{this.image}}' alt='{{this.title}}' />
        </div>
        <div class='movie-card__content'>
          <h4>{{this.title}}</h4>
          <button><a href='/movies/{{this._id}}'>See More</a></button>
        </div>
      </div>
    {{/each}}
  </div>
  <footer><a href='/'>Back</a></footer>
</div>